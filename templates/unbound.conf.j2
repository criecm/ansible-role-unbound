# {{ ansible_managed }}
server:
{% if unbound_pidfile %}
	pidfile: {{ unbound_pidfile }}
{% endif %}
	extended-statistics: yes
	num-threads: {{ [ ansible_processor_count|int/2, 1 ] | max | int }}
	do-not-query-localhost: yes
{% if not is_jail %}
	interface: 127.0.0.1
	interface: ::1
{%   if unbound_do_dot | default(False) %}
	interface: 127.0.0.1@853
	interface: ::1@853
{%   endif %}
{%   if unbound_do_doh | default(False) %}
	interface: 127.0.0.1@443
	interface: ::1@443
{%   endif %}
{% endif %}
	do-ip6: yes
	hide-identity: yes
	hide-version: yes
{% if unbound_port != 53 %}
	port: {{ unbound_port }}
{% endif %}
{% if unbound_interfaces | count() > 0 %}
{% for ip in unbound_interfaces %}
{% if ip not in ["127.0.0.1","::1"] %}
	interface: {{ ip }}
{%   if unbound_do_dot | default(False) %}
	interface: {{ ip }}@853
{%   endif %}
{%   if unbound_do_doh | default(False) %}
	interface: {{ ip }}@443
{%   endif %}
{% endif %}
{% endfor %}
{% else %}
{% for ip in ansible_all_ipv4_addresses | union(ansible_all_ipv6_addresses) %}
	interface: {{ ip }}
{% endfor %}
{% endif %}
	auto-trust-anchor-file: "{{ unbound_trust_anchor }}"
{% if unbound_root_hints %}
	root-hints: "{{ unbound_root_hints }}"
{% endif %}
	access-control: 0.0.0.0/0 refuse
	access-control: ::/0 refuse
{% if our_nets | union(private_nets) | count > 0 %}
	access-control: 127.0.0.0/8 allow
	access-control: ::1 allow
{% for net in our_nets | union(private_nets) %}
	access-control: {{ net }} allow
{% endfor %}
{% endif %}

{% if unbound_tls_bundle %}
	tls-cert-bundle: {{ unbound_tls_bundle }}
{% endif %}

{% if unbound_do_dot | default(False) or unbound_do_doh | default(False) %}
	tls-service-pem: {{ unbound_tls_basedir }}/{{ unbound_tls_cert | basename }}
	tls-service-key: {{ unbound_tls_basedir }}/private/{{ unbound_tls_key | basename }}
{% endif %}

{% if unbound_dns64 %}
	module-config: "dns64 validator iterator"
{%   if unbound_dns64_prefix %}
	dns64-prefix: {{ unbound_dns64_prefix }}
{%   endif %}
{% endif %}

{% for priv_reverse in unbound_nodefault %}
	local-zone: "{{ priv_reverse }}" nodefault
{% endfor %}

{% for net in private_nets %}
	private-address: {{ net }}
{% endfor %}

{% for dom in private_domains %}
	domain-insecure: "{{ dom.name }}"
{% if not dom.name is match(".*\.arpa\.?") %}
	private-domain: "{{ dom.name }}"
{% endif %}
{% endfor %}

remote-control:
	control-enable: yes
{% if unbound_control_interface != '' %}
	control-interface: {{ unbound_control_interface }}
{% else %}
{% if is_jail %}
{% if ansible_all_ipv4_addresses | count > 0 %}
	control-interface: {{ ansible_all_ipv4_addresses[0] }}
{% else %}
	control-interface: {{ ansible_all_ipv6_addresses[0] }}
{% endif %}
{% endif %}
{% endif %}

{% for dom in private_domains %}

stub-zone:
	name: "{{ dom.name }}"
{%   if unbound_stub_force_masters | default([]) | count > 0 %}
{%     for master in unbound_stub_force_masters %}
	stub-addr: {{ master }}
{%     endfor %}
{%   else %}
{%     for master in dom.masters %}
	stub-addr: {{ master }}
{%     endfor %}
{%   endif %}
{%   if dom.nocache | default(False) %}
	stub-no-cache: yes
{%   endif %}
{% endfor %}

{% for dom in our_domains if not private_domains | selectattr('name','equalto',dom.name) | list | count > 0 %}

stub-zone:
	name: "{{ dom.name }}"
{%   if unbound_stub_force_masters | default([]) | count > 0 %}
{%     for master in unbound_stub_force_masters %}
	stub-addr: {{ master }}
{%     endfor %}
{%   else %}
{%     for master in dom.masters %}
	stub-addr: {{ master }}
{%     endfor %}
{%   endif %}
{% endfor %}

{% for dom in unbound_forward_domains %}

forward-zone:
	name: "{{ dom.name }}"
{% for master in dom.masters %}
	forward-addr: {{ master }}
{% endfor %}
{% endfor %}

{% for dom in unbound_stub_domains %}

stub-zone:
	name: "{{ dom.name }}"
{%   for master in dom.masters %}
	stub-addr: {{ master }}
{%   endfor %}
{%   if dom.nocache | default(False) %}
	stub-no-cache: yes
{%   endif %}
{% endfor %}

{% if unbound_forwarders | count() > 0 %}

forward-zone:
	name: "."
  {% for resolver in unbound_forwarders %}
	forward-addr: {{ resolver }}
  {% endfor %}
	forward-first: yes
{% endif %}

include-toplevel: {{ unbound_dir }}/blacklist.conf
